﻿<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Hunter - Quản lý Sân Tập</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body class="flex h-screen overflow-hidden">

    <aside class="w-64 bg-white border-r border-gray-200 flex flex-col h-full">
        <div class="p-6 text-center border-b border-gray-200">
            <div class="text-lg font-extrabold text-slate-800">Quản lý Sân Tập</div>
            <div class="text-base font-semibold text-blue-600"><i class="fas fa-crosshairs mr-1"></i>THE HUNTER</div>
        </div>

        <nav class="flex flex-col mt-4 px-4">
            <p class="text-xs text-gray-500 mb-2">Menu quản lý</p>
            <a asp-controller="Home" asp-action="Index" class="flex items-center px-4 py-3 text-blue-600 bg-blue-100 font-medium rounded-md">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
                Dashboard
            </a>
            <a asp-controller="Court" asp-action="Index" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-md transition">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Quản lý sân
            </a>
            <a asp-controller="Staff" asp-action="Index" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-md transition">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Quản lý nhân sự
            </a>

            <a asp-controller="Booking" asp-action="Index" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-md transition">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3">
                    <path d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                </svg>
                Đăng ký vé
            </a>

            <a asp-controller="Order" asp-action="Index" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-md transition">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3">
                    <path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Yêu cầu thêm
            </a>

            <a asp-controller="Inventory" asp-action="Index" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-md transition">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5 mr-3">
                    <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                Kho hàng
            </a>
        </nav>
    </aside>

    <main class="flex-1 p-8 overflow-y-auto">
        <header class="mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Dashboard</h2>
            <p class="text-gray-500">Hệ thống quản lý sân tập</p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="font-semibold text-gray-700">Sân tập</h3>
                    <i class="fas fa-table-tennis text-blue-400 text-xl"></i>
                </div>
                <p class="text-sm text-gray-600">Đang dùng: <span class="font-bold text-gray-800">8</span></p>
                <p class="text-sm text-gray-600">Còn trống: <span class="font-bold text-gray-800">7</span></p>
                <p class="text-xs text-blue-500 mt-2">Tỉ lệ lấp đầy trong ngày: 67%</p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="font-semibold text-gray-700">Vé đã bán</h3>
                    <i class="fas fa-id-card text-yellow-400 text-xl"></i>
                </div>
                <p class="text-sm text-gray-600">Đã bán: <span class="font-bold text-gray-800">36</span></p>
                <p class="text-sm text-gray-600">Chưa Checkin: <span class="font-bold text-gray-800">18</span></p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="flex justify-between items-start mb-4">
                    <h3 class="font-semibold text-gray-700">Doanh thu tháng</h3>
                    <i class="fas fa-dollar-sign text-green-500 text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-gray-800">36.9 Triệu VNĐ</p>
                <p class="text-xs text-blue-500 mt-2">+3.6% so với tháng trước</p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 relative">
                <div class="absolute top-2 right-2 w-4 h-4 bg-orange-500 rounded-full flex items-center justify-center text-white text-xs">!</div>
                <div class="flex justify-between items-start mb-4">
                    <h3 class="font-semibold text-gray-700">Yêu cầu thêm</h3>
                    <i class="fas fa-exclamation-circle text-orange-500 text-xl"></i>
                </div>
                <p class="text-sm text-gray-600">Đã xử lý: <span class="font-bold text-gray-800">36</span></p>
                <p class="text-sm text-gray-600">Chưa xử lý: <span class="font-bold text-gray-800">18</span></p>
            </div>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 flex gap-8">
            <div class="w-2/3">
                <canvas id="lineChart" height="150"></canvas>
            </div>
            <div class="w-1/3 flex flex-col items-center">
                <canvas id="pieChart" height="150"></canvas>
                <p class="mt-4 font-semibold text-gray-700">Tỉ lệ doanh thu</p>
            </div>
        </div>
    </main>

    <script>
        // Line Chart
        const lineCtx = document.getElementById('lineChart').getContext('2d');
        new Chart(lineCtx, {
            type: 'line',
            data: {
                labels: ['Tuần 1', 'Tuần 2', 'Tuần 3', 'Tuần 4', 'Tuần 5'],
                datasets: [
                    {
                        label: 'Doanh thu',
                        data: [5, 7, 8, 6.5, 6],
                        borderColor: '#22d3ee',
                        backgroundColor: '#22d3ee',
                        tension: 0.4
                    },
                    {
                        label: 'Chi tiêu',
                        data: [3, 6, 7, 5, 5],
                        borderColor: '#fb923c',
                        backgroundColor: '#fb923c',
                        tension: 0.4
                    }
                ]
            },
            options: {
                plugins: { legend: { position: 'top' } },
                scales: { y: { beginAtZero: true, title: { display: true, text: 'Triệu VNĐ' } } }
            }
        });

        // Pie Chart
        const pieCtx = document.getElementById('pieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: ['Bán vé', 'Dụng cụ', 'Nước uống'],
                datasets: [{
                    data: [57.1, 28.6, 14.3],
                    backgroundColor: ['#67e8f9', '#22d3ee', '#0891b2']
                }]
            },
            options: {
                plugins: { 
                    legend: { 
                        display: true, 
                        position: 'right',
                        labels: {
                            boxWidth: 12,
                            padding: 20
                        }
                    } 
                }
            }
        });
    </script>
</body>
</html>