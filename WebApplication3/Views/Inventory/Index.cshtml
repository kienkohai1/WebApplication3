@* Index.cshtml (Updated) *@
@model IEnumerable<WebApplication3.Models.Product>

@{
    ViewData["Title"] = "Quản lý kho hàng";
    var categories = ViewBag.Categories as List<string>;
}

<div class="main-layout">
    <aside class="sidebar">
        <div style="padding: 24px; text-align: center;">
            <div style="font-size: 18px; font-weight: 800; color: #1e293b;">Quản lý Sân Tập</div>
            <div style="font-size: 16px; color: var(--primary-color); font-weight: 600;">The Hunter</div>
        </div>

        <nav class="sidebar-menu">
            <p style="font-size: 12px; color: var(--text-muted); padding: 0 16px; margin-bottom: 8px;">Menu quản lý</p>
            <a href="#" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
                Dashboard
            </a>
            <a asp-controller="Court" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Quản lý sân
            </a>
            <a asp-controller="Staff" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Quản lý nhân sự
            </a>

            <a asp-controller="Booking" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                </svg>
                Đăng ký vé
            </a>

            <a asp-controller="Order" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Yêu cầu thêm
            </a>

            <a asp-controller="Inventory" asp-action="Index" class="menu-item active">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                Kho hàng
            </a>
        </nav>
    </aside>

    <main class="content-area">
        <div class="page-header" style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div>
                <h1>Quản Lý Kho Bắn Cung</h1>
                <p style="color: var(--text-muted); margin-top: 4px;">Hệ thống quản lý nhập hàng và thiết bị sân tập</p>
            </div>
            <a asp-action="Create" class="btn-submit" style="text-decoration: none;">+ Nhập hàng mới</a>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-light border-0 shadow-sm">
                    <div class="card-body">
                        <h5>Vốn tồn kho</h5>
                        <h3 class="text-primary">@(Math.Round((double)ViewBag.TotalStockValue / 1000000, 2).ToString("N2")) Tr</h3>
                        <p class="text-muted">Giá trị hàng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light border-0 shadow-sm">
                    <div class="card-body">
                        <h5>Doanh thu bán lẻ</h5>
                        <h3 class="text-primary">@(Math.Round((double)ViewBag.TotalRevenue / 1000000, 2).ToString("N2")) Tr</h3>
                        <p class="text-muted">Tổng tiền thu</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light border-0 shadow-sm">
                    <div class="card-body">
                        <h5>Tổng Sản phẩm trong kho</h5>
                        <h3 class="text-primary">@ViewBag.TotalStockQuantity</h3>
                        <p class="text-muted">Sản phẩm trong kho</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="search-box" style="margin-bottom: 24px;">
            <form asp-action="Index" method="get" style="display: flex; gap: 8px;">
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm tên thiết bị, mã cung..."
                       value="@ViewData["CurrentFilter"]" style="max-width: 300px;" />
                <select name="category" class="form-select" style="max-width: 200px;">
                    <option value="Tất cả" selected="@(ViewData["CurrentCategory"].ToString() == "Tất cả")">Tất cả danh mục</option>
                    @foreach (var cat in categories)
                    {
                        <option value="@cat" selected="@(ViewData["CurrentCategory"].ToString() == cat)">@cat</option>
                    }
                </select>
                <button type="submit" class="btn-submit" style="padding: 10px 20px;">Tìm kiếm</button>
            </form>
        </div>

        <div class="data-card">
            <table class="staff-table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Danh mục</th>
                        <th style="text-align: right;">Giá nhập</th>
                        <th style="text-align: right;">Giá bán</th>
                        <th style="text-align: center;">Số lượng</th>
                        <th style="text-align: right;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 600; color: var(--text-main);">@item.Name</div>
                                <div style="font-size: 12px; color: var(--text-muted);">@item.Description</div>
                            </td>
                            <td>@item.Category</td>
                            <td style="text-align: right;">@string.Format("{0:N0}", item.ImportPrice)</td>
                            <td style="text-align: right; color: var(--primary-color); font-weight: 700;">
                                @string.Format("{0:N0}", item.Price)
                            </td>
                            <td style="text-align: center;">
                                @if (item.StockQuantity < 10)
                                {
                                    <span class="status-badge badge-inactive"><span class="dot"></span> @item.StockQuantity (Thấp)</span>
                                }
                                else
                                {
                                    <span class="status-badge badge-active"><span class="dot"></span> @item.StockQuantity</span>
                                }
                                <div style="margin-top: 8px; display: flex; justify-content: center; gap: 8px;">
                                    <form asp-action="Restock" method="post" style="display: flex; gap: 4px;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="number" name="addedQuantity" min="1" value="1" style="width: 50px; text-align: center;" />
                                        <button type="submit" class="btn-submit" style="padding: 4px 8px; font-size: 12px;">+ Thêm</button>
                                    </form>
                                    <form asp-action="Deplete" method="post" style="display: flex; gap: 4px;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="number" name="removedQuantity" min="1" value="1" style="width: 50px; text-align: center;" />
                                        <button type="submit" class="btn-submit" style="padding: 4px 8px; font-size: 12px; background: var(--danger);">- Giảm</button>
                                    </form>
                                </div>
                            </td>
                            <td style="text-align: right;">
                                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: var(--primary-color); text-decoration: none; font-weight: 600;">Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Xóa sản phẩm này?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" style="background:none; border:none; color:var(--danger); font-weight:600; cursor:pointer; padding:0;">Xóa</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>