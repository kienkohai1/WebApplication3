@model IEnumerable<WebApplication3.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý kho hàng - The Hunter</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Booking.css" />

    <style>
        /* Đảm bảo giao diện hiển thị đúng khi không có Layout bao quanh */
        body {
            margin: 0;
            padding: 0;
            background-color: #f8fafc;
        }

        .product-table td {
            vertical-align: middle;
        }

        .stock-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        /* Tái định nghĩa các màu badge từ Booking.css nếu cần */
        .badge-low-stock {
            background: #fee2e2;
            color: #ef4444;
        }

        .badge-instock {
            background: #dcfce7;
            color: #22c55e;
        }
    </style>
</head>
<body>

    <div class="main-layout">
        <aside class="sidebar">
            <div style="padding: 24px; text-align: center;">
                <div style="font-size: 18px; font-weight: 800; color: #1e293b;">Quản lý Sân Tập</div>
                <div style="font-size: 16px; color: #2962ff; font-weight: 600;">The Hunter</div>
            </div>

            <nav class="sidebar-menu">
                <p style="font-size: 12px; color: var(--text-muted); padding: 0 16px; margin-bottom: 8px;">Menu quản lý</p>
                <a href="#" class="menu-item"><i class="bi bi-speedometer2"></i> Dashboard</a>
                <a asp-controller="Court" asp-action="Index" class="menu-item"><i class="bi bi-grid-3x3-gap"></i> Quản lý sân</a>
                <a asp-controller="Staff" asp-action="Index" class="menu-item"><i class="bi bi-people"></i> Quản lý nhân sự</a>
                <a asp-controller="Booking" asp-action="Index" class="menu-item"><i class="bi bi-ticket-perforated"></i> Đăng ký vé</a>
                <a asp-controller="Inventory" asp-action="Index" class="menu-item active"><i class="bi bi-box-seam"></i> Kho hàng</a>
            </nav>
        </aside>

        <main class="content-area">
            <div class="header-flex" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
                <div>
                    <h1 style="font-size: 24px; font-weight: 700; color: #1e293b; margin: 0;">Quản lý kho hàng</h1>
                    <p style="color: #64748b; margin: 4px 0 0 0;">Theo dõi tồn kho vật tư bắn cung</p>
                </div>
                <a asp-action="Create" class="btn-submit" style="text-decoration: none;">+ Thêm sản phẩm mới</a>
            </div>

            <div class="status-summary" style="margin-bottom: 24px; display: flex; gap: 12px; flex-wrap: wrap;">
                <div class="summary-item" style="padding: 8px 16px; background: white; border: 1px solid #e2e8f0; border-radius: 50px; font-weight: 600; font-size: 14px;">
                    <span style="height: 8px; width: 8px; background: #2962ff; border-radius: 50%; display: inline-block; margin-right: 8px;"></span>
                    Tổng mặt hàng: @ViewBag.TotalProducts
                </div>
                <div class="summary-item" style="padding: 8px 16px; background: white; border: 1px solid #e2e8f0; border-radius: 50px; font-weight: 600; font-size: 14px;">
                    <span style="height: 8px; width: 8px; background: #ef4444; border-radius: 50%; display: inline-block; margin-right: 8px;"></span>
                    Sắp hết hàng: @ViewBag.LowStockCount
                </div>
                <div class="summary-item" style="padding: 8px 16px; background: white; border: 1px solid #e2e8f0; border-radius: 50px; font-weight: 600; font-size: 14px;">
                    <span style="height: 8px; width: 8px; background: #22c55e; border-radius: 50%; display: inline-block; margin-right: 8px;"></span>
                    Giá trị tồn: @string.Format("{0:N0}", ViewBag.TotalStockValue) VNĐ
                </div>
            </div>

            <div class="search-box" style="margin-bottom: 24px;">
                <form asp-action="Index" method="get" style="display: flex; gap: 8px;">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Tìm tên hoặc danh mục..." value="@ViewData["CurrentFilter"]" style="max-width: 300px; border-radius: 8px;" />
                    <button type="submit" class="btn-submit">Tìm kiếm</button>
                </form>
            </div>

            <div class="table-container" style="background: white; border: 1px solid #e2e8f0; border-radius: 12px; overflow: hidden;">
                <table class="table table-hover mb-0 product-table">
                    <thead style="background: #f1f5f9;">
                        <tr>
                            <th style="padding: 16px; font-size: 14px; color: #64748b;">Sản phẩm</th>
                            <th style="padding: 16px; font-size: 14px; color: #64748b;">Danh mục</th>
                            <th style="padding: 16px; font-size: 14px; color: #64748b; text-align: right;">Giá nhập</th>
                            <th style="padding: 16px; font-size: 14px; color: #64748b; text-align: right;">Giá bán</th>
                            <th style="padding: 16px; font-size: 14px; color: #64748b; text-align: center;">Số lượng</th>
                            <th style="padding: 16px; font-size: 14px; color: #64748b; text-align: right;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="border-bottom: 1px solid #e2e8f0;">
                                <td style="padding: 16px;">
                                    <div style="font-weight: 600; color: #1e293b;">@item.Name</div>
                                    <div style="font-size: 12px; color: #64748b;">@item.Description</div>
                                </td>
                                <td style="padding: 16px;">@item.Category</td>
                                <td style="padding: 16px; text-align: right;">@string.Format("{0:N0}", item.ImportPrice)</td>
                                <td style="padding: 16px; text-align: right; color: #2962ff; font-weight: 700;">@string.Format("{0:N0}", item.Price)</td>
                                <td style="padding: 16px; text-align: center;">
                                    <span class="stock-badge @(item.StockQuantity < 10 ? "badge-low-stock" : "badge-instock")">
                                        @item.StockQuantity
                                    </span>
                                </td>
                                <td style="padding: 16px; text-align: right;">
                                    <div style="display: flex; gap: 12px; justify-content: flex-end;">
                                        <a asp-action="Edit" asp-route-id="@item.Id" style="color: #f59e0b; text-decoration: none; font-weight: 600; font-size: 14px;">Sửa</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Xóa sản phẩm này?')">
                                            <button type="submit" style="background:none; border:none; color:#ef4444; font-weight:600; cursor:pointer; font-size:14px; padding:0;">Xóa</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>

</body>
</html>
