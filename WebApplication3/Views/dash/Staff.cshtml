@model IEnumerable<WebApplication3.Models.Staff>

@{
    ViewData["Title"] = "Quản lý nhân sự";
}

<div class="p-8 bg-[#f7f7f7] min-h-screen">
    @* Tiêu đề trang *@
    <div class="mb-8">
        <h1 class="text-3xl font-semibold mb-2 text-slate-800">Quản lý nhân sự</h1>
        <p class="text-gray-600">Quản lý thông tin và lịch làm việc của nhân viên</p>
    </div>

    @* Thanh công cụ và Thống kê *@
    <div class="mb-6 flex flex-wrap justify-between items-center gap-4">
        <div class="flex gap-3">
            <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                Thêm nhân viên
            </a>

            @* Ô tìm kiếm *@
            <form asp-action="Index" method="get" class="relative">
                <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]"
                       placeholder="Tìm tên hoặc chức vụ..."
                       class="pl-4 pr-10 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white" />
                <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </button>
            </form>
        </div>

        @* Thẻ thống kê nhanh *@
        <div class="flex gap-3">
            <div class="flex items-center gap-2 px-4 py-1.5 bg-green-100 text-green-800 rounded-full text-sm font-medium border border-green-200">
                <div class="w-2 h-2 bg-green-600 rounded-full animate-pulse"></div>
                Đang làm: @ViewBag.ActiveCount
            </div>
            <div class="flex items-center gap-2 px-4 py-1.5 bg-gray-100 text-gray-800 rounded-full text-sm font-medium border border-gray-200">
                <div class="w-2 h-2 bg-gray-600 rounded-full"></div>
                Nghỉ: @ViewBag.InactiveCount
            </div>
        </div>
    </div>

    @* Bảng danh sách *@
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Họ tên</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Chức vụ</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Ca làm việc</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Liên hệ</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Trạng thái</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase tracking-wider text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-blue-50/50 transition-colors group">
                        <td class="px-6 py-4">
                            <p class="font-medium text-slate-800">@item.Name</p>
                            <p class="text-xs text-gray-400 font-mono">ID: #@item.Id.ToString("D3")</p>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-xs font-semibold">
                                @item.Position
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <p class="text-gray-700">@item.Shift</p>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex flex-col gap-1 text-sm text-gray-600">
                                <div class="flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                    @item.Phone
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                    @item.Email
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            @{
                                var statusClass = item.Status == WebApplication3.Models.StaffStatus.Active
                                ? "bg-green-100 text-green-800 border-green-200"
                                : "bg-gray-100 text-gray-800 border-gray-200";
                                var statusLabel = item.Status == WebApplication3.Models.StaffStatus.Active ? "Đang làm" : "Nghỉ";
                            }
                            <span class="px-3 py-1 rounded-full text-xs font-bold border @statusClass">
                                @statusLabel
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex justify-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="p-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-all" title="Chỉnh sửa">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 1 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="p-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition-all" title="Xóa">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="p-12 text-center bg-white">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-gray-300 mb-4"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                <p class="text-gray-400 font-medium">Không tìm thấy nhân viên nào phù hợp</p>
            </div>
        }
    </div>
</div>