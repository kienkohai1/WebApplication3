@using WebApplication3.Models
@model IEnumerable<WebApplication3.Models.Booking>

@{
    ViewData["Title"] = "Quản lý Đặt Sân";
}

<div class="main-layout">
    <aside class="sidebar">
        <div style="padding: 24px; text-align: center;">
            <div style="font-size: 18px; font-weight: 800; color: #1e293b;">Quản lý Sân Tập</div>
            <div style="font-size: 16px; color: #2962ff; font-weight: 600;">The Hunter</div>
        </div>

        <nav class="sidebar-menu">
            <p style="font-size: 12px; color: var(--text-muted); padding: 0 16px; margin-bottom: 8px;">Menu quản lý</p>

            <a href="#" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                Dashboard
            </a>

            <a asp-controller="Court" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Quản lý sân
            </a>

            <a asp-controller="Staff" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                Quản lý nhân sự
            </a>

            <a asp-controller="Booking" asp-action="Index" class="menu-item active">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                </svg>
                Đăng ký vé
            </a>

            <a asp-controller="Order" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Yêu cầu thêm
            </a>

            <a asp-controller="Inventory" asp-action="Index" class="menu-item">
                <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                Kho hàng
            </a>
        </nav>
    </aside>
    <main class="content-area">
        <div class="header-flex" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
            <div>
                <h1>Danh sách Đặt Sân</h1>
                <p style="color: var(--text-muted); margin: 4px 0 0 0;">Quản lý và theo dõi các đơn thuê sân hiện có</p>
            </div>
            <a asp-action="Create" class="btn-submit" style="text-decoration: none;">+ Đặt sân mới</a>
        </div>

        <div class="search-box" style="margin-bottom: 24px;">
            <form asp-action="Index" method="get" style="display: flex; gap: 8px;">
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên khách hoặc sân..." value="@ViewData["CurrentFilter"]" style="max-width: 300px;" />
                <button type="submit" class="btn-submit">Tìm kiếm</button>
            </form>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Khách hàng</th>
                        <th>Sân & Loại vé</th>
                        <th>Thời gian thuê</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th style="text-align: right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 600;">@item.CustomerName</div>
                                <div style="font-size: 0.85rem; color: var(--text-muted)">@item.Phone</div>
                            </td>
                            <td>
                                <div>@item.Court</div>
                                <div style="font-size: 0.85rem; color: var(--primary-color)">@item.TicketType</div>
                            </td>
                            <td>
                                <div style="font-weight: 500;">@item.Date.ToString("dd/MM/yyyy")</div>
                                <div style="font-size: 0.85rem; color: #64748b;">
                                    @item.StartHour:00 - @item.EndHour:00
                                </div>
                            </td>
                            <td style="font-weight: 600;">@item.TotalPrice.ToString("N0") VNĐ</td>
                            <td>
                                @if (item.Status == BookingStatus.Confirmed)
                                {
                                    <span class="status-badge badge-confirmed"><span class="dot"></span> Đã xác nhận</span>
                                }
                                else if (item.Status == BookingStatus.Pending)
                                {
                                    <span class="status-badge badge-pending"><span class="dot"></span> Chờ xử lý</span>
                                }
                                else
                                {
                                    <span class="status-badge badge-cancelled"><span class="dot"></span> Đã hủy</span>
                                }
                            </td>
                            <td style="text-align: right">
                                <a asp-action="Edit" asp-route-id="@item.Id" style="color: var(--primary-color); margin-right: 12px; text-decoration: none;">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" style="color: var(--danger); text-decoration: none;">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>