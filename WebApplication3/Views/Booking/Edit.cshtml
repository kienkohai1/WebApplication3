@model WebApplication3.Models.Booking
@using WebApplication3.Models

@{
    ViewData["Title"] = "Chỉnh sửa đơn đặt sân";
}

<div class="main-layout">
    <main class="content-area">
        <div style="margin-bottom: 24px;">
            <h1>Chỉnh sửa đơn #BK-@Model.Id</h1>
        </div>

        <div class="form-card">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Tên khách hàng</label>
                    <input asp-for="CustomerName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Thay đổi trạng thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="@BookingStatus.Pending">Chờ xác nhận</option>
                        <option value="@BookingStatus.Confirmed">Đã xác nhận</option>
                        <option value="@BookingStatus.Cancelled">Hủy đơn</option>
                    </select>
                </div>

                <div style="margin-top: 24px;">
                    <button type="submit" class="btn-submit">Cập nhật đơn</button>
                    <a asp-action="Index" class="btn-back">Quay lại</a>
                </div>
            </form>
        </div>
    </main>
</div>