@model WebApplication3.Models.Booking
@using WebApplication3.Models

@{
    ViewData["Title"] = "Chỉnh sửa đơn đặt sân";
}

<div class="main-layout">
    <main class="content-area">
        <div class="form-card">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
                <h2 style="margin: 0;">Cập nhật đơn đặt #BK-@Model.Id</h2>
                <span class="status-badge @Model.Status.ToString().ToLower()" style="padding: 6px 12px; border-radius: 20px; font-size: 0.85rem;">
                    @Html.DisplayFor(model => model.Status)
                </span>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CustomerName">Tên khách hàng</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="row" style="display: flex; gap: 16px;">
                    <div class="form-group" style="flex: 1;">
                        <label asp-for="Phone">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label asp-for="Court">Sân tập</label>
                        <select asp-for="Court" class="form-control">
                            <option value="Sân 1">Sân 1</option>
                            <option value="Sân 2">Sân 2</option>
                            <option value="Sân VIP">Sân VIP</option>
                        </select>
                    </div>
                </div>

                <div class="row" style="display: flex; gap: 16px;">
                    <div class="form-group" style="flex: 1;">
                        <label asp-for="TicketType">Loại vé</label>
                        <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList<TicketType>()"></select>
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label asp-for="Status">Trạng thái đơn</label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<BookingStatus>()"></select>
                    </div>
                </div>

                <hr style="border: 0; border-top: 1px solid #eee; margin: 24px 0;" />

                <div class="row" style="display: flex; gap: 16px;">
                    <div class="form-group" style="flex: 1;">
                        <label asp-for="Date">Ngày đặt sân</label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="flex: 1;">
                        <label>Giờ bắt đầu</label>
                        <select asp-for="StartHour" class="form-control">
                            @for (int i = 5; i <= 22; i++)
                            {
                                <option value="@i">@i:00</option>
                            }
                        </select>
                    </div>

                    <div class="form-group" style="flex: 1;">
                        <label>Giờ kết thúc</label>
                        <select asp-for="EndHour" class="form-control">
                            @for (int i = 6; i <= 23; i++)
                            {
                                <option value="@i">@i:00</option>
                            }
                        </select>
                    </div>
                </div>

                <div style="background: #fff9db; padding: 12px; border-radius: 8px; margin-top: 16px; font-size: 0.9rem; color: #856404;">
                    <strong>Lưu ý:</strong> Tổng tiền sẽ được hệ thống tự động tính lại dựa trên số giờ và loại vé mới sau khi bạn nhấn Lưu.
                </div>

                <div style="margin-top: 32px; border-top: 1px solid var(--border-color); padding-top: 24px; display: flex; gap: 12px;">
                    <button type="submit" class="btn-submit" style="flex: 2;">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn-back" style="flex: 1; text-align: center; line-height: 40px; text-decoration: none; background: #f1f5f9; color: #475569; border-radius: 8px; font-weight: 600;">Hủy</a>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}