@model WebApplication3.Models.Booking

@{
    ViewData["Title"] = "Xác nhận xóa đơn đặt sân";
}

<div class="main-layout">
    <main class="content-area" style="display: flex; align-items: center; justify-content: center; min-height: 80vh;">
        <div class="form-card" style="text-align: center; max-width: 500px; border-top: 4px solid #ef4444;">
            <div style="color: #ef4444; margin-bottom: 16px;">
                <svg width="64" height="64" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
            </div>

            <h2 style="margin-bottom: 8px;">Xóa đơn đặt sân này?</h2>
            <p style="color: #64748b; margin-bottom: 24px;">
                Bạn có chắc chắn muốn xóa đơn đặt của khách hàng <strong style="color: #1e293b;">@Model.CustomerName</strong>?
                Hành động này không thể hoàn tác.
            </p>

            <div style="background: #f8fafc; padding: 20px; border-radius: 12px; margin-bottom: 32px; text-align: left; border: 1px solid #e2e8f0;">
                <div style="margin-bottom: 10px; display: flex; justify-content: space-between;">
                    <span style="color: #64748b;">Mã đơn:</span>
                    <span style="font-weight: 600;">#BK-@Model.Id</span>
                </div>
                <div style="margin-bottom: 10px; display: flex; justify-content: space-between;">
                    <span style="color: #64748b;">Sân tập:</span>
                    <span style="font-weight: 600;">@Model.Court</span>
                </div>
                <div style="margin-bottom: 10px; display: flex; justify-content: space-between;">
                    <span style="color: #64748b;">Ngày đặt:</span>
                    <span style="font-weight: 600;">@Model.Date.ToString("dd/MM/yyyy")</span>
                </div>
                <div style="margin-bottom: 10px; display: flex; justify-content: space-between;">
                    <span style="color: #64748b;">Khung giờ:</span>
                    <span style="font-weight: 600; color: #2563eb;">@Model.StartHour:00 - @Model.EndHour:00</span>
                </div>
                <div style="padding-top: 10px; border-top: 1px dashed #cbd5e1; display: flex; justify-content: space-between;">
                    <span style="color: #64748b;">Tổng tiền:</span>
                    <span style="font-weight: 700; color: #1e293b;">@Model.TotalPrice.ToString("N0") VNĐ</span>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn-submit" style="background: #ef4444; width: 100%; margin-bottom: 12px;">
                    Xác nhận xóa đơn
                </button>
                <a asp-action="Index" style="color: #64748b; text-decoration: none; font-size: 14px; font-weight: 500;">
                    Hủy và quay lại
                </a>
            </form>
        </div>
    </main>
</div>

<style>
    .btn-submit:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>